<MyScreenManager>:
    LoginScreen:
    SecondScreen:
    ThirdScreen:

<LoginScreen>:
    name: 'login_screen'

<SecondScreen>:
    name: 'second_screen'

<ThirdScreen>:
    name: 'third_screen'



<CustomBottomSheet@BoxLayout>:
	size_hint_y: None
	height: '500dp'
	duration_opening: 0.8
	animation: True
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        MDTopAppBar:
            title: root.my_variable
        Spinner:
            text: 'Select option'
            values: ['1', '2', '3', '4', '5']

        TextInput:
            hint_text: 'Комментарий'

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10

            Button:
                text: 'Принять'

            Button:
                text: 'Не принять'



